@model Web.Infrastructure.Areas.Admin.Models.LoginAdminModel
@{
    Layout = null;
}
<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>N8 - BookStore</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/TemplateAdmin/plugins/fontawesome-free/css/all.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/TemplateAdmin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/TemplateAdmin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/TemplateAdmin/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/TemplateAdmin/dist/css/adminlte.min.css">
</head>
<body class="login-page" style="min-height: 464px;">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">

                <a href="#" class="h1"><b>Admin N8</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Đăng nhập</p>

                @using (Html.BeginForm("Index", "LoginAdmin", FormMethod.Post, new { @id = "loginForm", area = "Admin" })) // Tạo form với action trỏ tới phương thức "Login" trong controller "Account"
                {
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.UserEmail, new { @class = "form-item form-control", placeholder = "Vui lòng nhập địa chỉ email của bạn", id = "emailInput", required = "required" })
                        @Html.ValidationMessageFor(m => m.UserEmail, "", new { @class = "text-danger" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.UserPassword, new { @class = "form-control input-password form-item", placeholder = "Tối thiểu 8 ký tự bao gồm cả chữ và số", id = "passwordInput", type = "password", @data_val_required = "Vui lòng nhập mật khẩu." })
                        @Html.ValidationMessageFor(m => m.UserPassword, "", new { @class = "text-danger" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="icheck-primary">
                                @Html.CheckBoxFor(x => x.SavePass, new { @class = "", type = "checkbox" })

                                <label for="remember">
                                    Lưu mật khẩu
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                        </div>
                        <!-- /.col -->
                    </div>
                }
               
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>


</body> 
</html>
