@model Web.Infrastructure.Areas.Admin.Models.CategoryAdminModel

<div class="">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">

                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Quản lý danh mục</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">


                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Danh sách thông tin</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th >Mã danh mục</th>
                                        <th >Tên danh mục</th>
                                        <th >Ngày tạo</th>
                                        <th >Người tạo</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model.Categories)
                                    {
                                        <tr>
                                            <td>@item.CategoryId.Substring(0,8)</td>
                                            <td>
                                                @item.CategoryName
                                            </td>
                                            <td>@item.CreateDate</td>
                                            <td>@item.CreateBy</td>
                                            <td>
                                                <div class="tools text-center">
                                                    <a href="@Url.Action("Update", "Category", new{categoryId = item.CategoryId})"><i class="fas fa-edit color-primary"></i></a>
                                                    <a href="@Url.Action("Delete", "Category", new{categoryId = item.CategoryId})"><i class="fas fa-trash color-red"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                   
                                    
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                            <div class="card-footer clearfix pl-0">
                                <a href="@Url.Action("Create", "Category")" type="button" class="btn btn-primary float-left "><i class="fas fa-plus"></i> Thêm mới</a>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>    

            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script src="~/TemplateAdmin/plugins/jquery/jquery.min.js"></script>

<script>
    $(function () {
      $("#example1").DataTable({
        "responsive": true, "lengthChange": false, "autoWidth": false,
        "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
      }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
      $('#example2').DataTable({
        "paging": true,
        "lengthChange": false,
        "searching": false,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "responsive": true,
      });
    });
</script>